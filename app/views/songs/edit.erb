<form action="/songs/<%=@song.slug%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name <input type="text" name="name" id="Name" value="<%=@song.name%>"></p>
    <p>Artist Name <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>"></p>
    <p>Genres</p>
    
    <% @genres.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
<% end %> 
    <input type="submit" value="Save" id="Save">
</form>